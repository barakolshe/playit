<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context="application.playit.Tuner">

    <LinearLayout
        android:layout_width="116dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/string1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="15dp"
            android:layout_weight="1"
            android:onClick="EHOnClick"
            android:text="E High"
            android:visibility="gone" />

        <Button
            android:id="@+id/string2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="15dp"
            android:layout_weight="1"
            android:onClick="BOnClick"
            android:text="B"
            android:visibility="gone" />

        <Button
            android:id="@+id/string3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="15dp"
            android:layout_weight="1"
            android:onClick="GOnClick"
            android:text="G"
            android:visibility="gone" />

        <Button
            android:id="@+id/string4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="15dp"
            android:layout_weight="1"
            android:onClick="DOnClick"
            android:text="D"
            android:visibility="gone" />

        <Button
            android:id="@+id/string5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="15dp"
            android:layout_weight="1"
            android:onClick="AOnClick"
            android:text="A"
            android:visibility="gone" />

        <Button
            android:id="@+id/string6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="15dp"
            android:layout_weight="1"
            android:onClick="ELOnClick"
            android:text="E Low"
            android:visibility="gone" />
    </LinearLayout>

    <Switch
        android:id="@+id/Mode"
        android:layout_width="96dp"
        android:layout_height="37dp"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="78dp"
        android:text="Switch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:layout_marginStart="88dp"
        app:layout_constraintBottom_toTopOf="@+id/gap"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/gap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="356dp"
        android:layout_marginStart="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="312dp"
        android:onClick="AutoOnClick"
        android:text="Auto Tune"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
