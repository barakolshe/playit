<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.tuner.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/noteT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="112dp"
        android:layout_marginTop="120dp"
        android:text="Note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gapT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="112dp"
        android:layout_marginTop="216dp"
        android:text="Gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tuneEH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="40dp"
        android:onClick="EHOnClick"
        android:text="E (high)"
        app:layout_constraintBottom_toTopOf="@+id/tuneB"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tuneB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="40dp"
        android:onClick="BOnClick"
        android:text="B"
        app:layout_constraintBottom_toTopOf="@+id/tuneG"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tuneG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="40dp"
        android:onClick="GOnClick"
        android:text="G"
        app:layout_constraintBottom_toTopOf="@+id/tuneD"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tuneD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="40dp"
        android:onClick="DOnClick"
        android:text="D"
        app:layout_constraintBottom_toTopOf="@+id/tuneA"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tuneA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="40dp"
        android:onClick="AOnClick"
        android:text="A"
        app:layout_constraintBottom_toTopOf="@+id/tuneEL"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tuneEL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="40dp"
        android:onClick="ELOnClick"
        android:text="E (low)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tuneAuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="48dp"
        android:onClick="AutoOnClick"
        android:text="Auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tuneEL" />

    <TextView
        android:id="@+id/tuneNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="525dp"
        android:layout_marginStart="264dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/methodSwitch"
        android:layout_width="100dp"
        android:layout_height="86dp"
        android:layout_marginBottom="92dp"
        android:layout_marginStart="264dp"
        android:checked="true"
        android:text="Switch"
        android:textOff="@string/advanced_mode"
        android:textOn="@string/easy_mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:checked="false" />

    <TextView
        android:id="@+id/methodType"
        android:layout_width="41dp"
        android:layout_height="48dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="292dp"
        android:text="E"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
